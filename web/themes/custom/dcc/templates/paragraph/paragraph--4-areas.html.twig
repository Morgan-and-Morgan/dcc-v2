{% set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
] %}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      <main style="background:url('{{ paragraph.field_section_1_bg|file_url }}') top left no-repeat fixed; background-size: cover; padding-top:55px; margin-top:-20px;">
        <div class="container">
          <div class="col-lg-12 col-md-12 col-sm-12 col-12">
            <div style="padding-bottom:30px;" id="maincopy" class="col-lg-12 col-md-12 col-sm-12 col-12">
              <h1 style="text-align: center;">{{ nodetitle }}</h1>
              <span class="largerfont">
                <p style="text-align: center;">{{ paragraph.field_section_1_text.value|raw }}</p>
              </span>
            </div>
          </div>
        </div>
        <!--START SECTION 2-->

        <div id="red">
          <!--RED-->
          <div class="container">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
              <h2>{{ paragraph.field_section_2_title.value|raw }}</h2>
            </div>
          </div>
        </div>
        <div id="white">
          <div class="container">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
              <p>{{ paragraph.field_section_2_text.value|raw }}</p>
            </div>
          </div>
        </div>
        <!--END SECTION 2-->

        <!--START DARK BLUE-->

        <div id="blue-grey2">
          <!--BLUE GREY-->
          <div class="container">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
              <h2>{{ paragraph.field_section_3_title.value|raw }}</h2>
            </div>
          </div>
          <!--BLUE GREY-->
        </div>
        <div id="grey2">
          <div class="container">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
              <p>{{ paragraph.field_section_3_text.value|raw }}</p>
            </div>
          </div>
        </div>
        <!--END DARK BLUE-->

        <!--START SECTION 4-->
        <!--Light Blue Entire Section-->
        <div id="lightbluesection" style="margin-bottom:0px; padding-bottom:0px;">
          <div class="container">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">

              <h2 style="margin-bottom:20px;"><p>{{ paragraph.field_section_4_text.value|raw }}</p>
              </h2>
              {{ content.field_disability_links }}
            </div>
          </div>
        </div>

        <!--END SECTION 4-->
      </main>    {% endblock %}
  </div>
{% endblock paragraph %}
