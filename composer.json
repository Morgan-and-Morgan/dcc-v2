{
    "name": "pantheon-systems/example-drops-8-composer",
    "description": "Install drops-8 with Composer on Pantheon.",
    "type": "project",
    "license": "MIT",
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "drupal_ftp_global_vars": {
            "type": "package",
            "package": {
                "name": "morgan-and-morgan/drupal_ftp_global_vars",
                "type": "drupal-module",
                "version": "1.0.2",
                "source": {
                    "url": "git@github.com:Morgan-and-Morgan/drupal-ftp-global-vars.git",
                    "type": "git",
                    "reference": "1.0.2"
                }
            }
        },
        "mm-drupal-core-d9": {
            "type": "git",
            "url": "git@github.com:morgan-and-morgan/mm-drupal-core-d9-shared-infra.git"
        }
    },
    "require": {
        "morgan-and-morgan/mm_drupal_core_d9_shared_infra": "dev-la-wem-3945",
        "wikimedia/composer-merge-plugin": "^2.0.1",
        "composer/installers": "^1.9",
        "drupal/config_delete": "^1.17",
        "drupal/config_devel": "^1.8",
        "drupal/context_entity_field": "^1.0.0-alpha1",
        "drupal/default_paragraphs": "^1.0",
        "drupal/field_states_ui": "^2.0",
        "drupal/fontawesome": "^2.17",
        "drupal/honeypot": "^2.0",
        "drupal/key": "^1.14",
        "drupal/menu_block": "^1.6",
        "drupal/menu_link_clone": "^3.2",
        "drupal/menus_attribute": "^1.1",
        "drupal/profile_switcher": "^1.0@alpha",
        "drupal/services": "^4.0@beta",
        "drupal/sfweb2lead_webform": "^5.2",
        "drupal/shortcode": "^2.0",
        "drupal/tb_megamenu": "^1.0@RC",
        "drupal/we_megamenu": "^1.11",
        "drupal/webform": "^6.0",
        "drupal/xmlsitemap": "^1.1",
        "drush/drush": "^10",
        "morgan-and-morgan/drupal_ftp_global_vars": "1.0.2",
        "pantheon-systems/drupal-integrations": "^8",
        "pantheon-systems/quicksilver-pushback": "^2"
    },
    "require-dev": {
        "behat/mink-extension": "^2.2"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "build-assets": [
            "@prepare-for-pantheon",
            "composer install --optimize-autoloader --no-dev"
        ],
        "lint": "find web/modules/custom web/themes/custom -name '*.php' -exec php -l {} \\;",
        "code-sniff": [
            "./vendor/bin/phpcs --standard=Drupal --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md --ignore=node_modules,bower_components,vendor ./web/modules/custom",
            "./vendor/bin/phpcs --standard=Drupal --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md --ignore=node_modules,bower_components,vendor ./web/themes/custom",
            "./vendor/bin/phpcs --standard=DrupalPractice --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md --ignore=node_modules,bower_components,vendor ./web/modules/custom",
            "./vendor/bin/phpcs --standard=DrupalPractice --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md --ignore=node_modules,bower_components,vendor ./web/themes/custom"
        ],
        "unit-test": "echo 'No unit test step defined.'",
        "prepare-for-pantheon": "DrupalProject\\composer\\ScriptHandler::prepareForPantheon",
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-create-project-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "build-theme": [
            "cd web/themes/custom/dcc; npm -v; node -v; npm install --unsafe-perm; npm run build;"
        ],
        "nuke-profile": [
            "rm -Rf web/profiles/contrib/ vendor/ composer.lock"
        ],
        "nuke-site": [
            "rm -Rf web/profiles/contrib/ vendor/ composer.lock web/themes/contrib web/theme/custom/dcc/dist web/theme/custom/dcc/node_modules"
        ],
        "nuke-rebuild": [
            "composer nuke-site",
            "composer install",
            "composer build-theme"
        ],
        "lando-nuke-deploy": [
            "composer nuke-site",
            "composer install",
            "lando drush updb -y",
            "lando drush cim -y",
            "composer build-theme",
            "lando drush cr"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/private/scripts/quicksilver/{$name}/": [
                "type:quicksilver-script"
            ]
        },
        "build-env": {
            "install-cms": [
                "drush site-install standard --account-mail={account-mail} --account-name={account-name} --account-pass={account-pass} --site-mail={site-mail} --site-name={site-name} --yes"
            ],
            "export-configuration": "drush config-export --yes"
        },
        "drupal-scaffold": {
            "allowed-packages": [
                "pantheon-systems/drupal-integrations"
            ],
            "locations": {
                "web-root": "./web"
            },
            "file-mapping": {
                "[project-root]/.editorconfig": false
            }
        },
        "patches": {
            "drupal/field_states_ui": {
                "Field_parents key not found": "https://www.drupal.org/files/issues/2021-06-08/3196272-3.patch",
                "Ajax error": "https://www.drupal.org/files/issues/2020-10-28/3145195-13661358_6.patch"
            },
            "drupal/we_megamenu": {
                "Optional parameter $theme_name declared... (https://www.drupal.org/project/we_megamenu/issues/3239043)": "https://www.drupal.org/files/issues/2022-02-24/we_megamenu_deprecated.patch"
            }
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "8.1"
        },
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true,
            "zaporylie/composer-drupal-optimizations": true,
            "wikimedia/composer-merge-plugin": true,
            "drupal/core-project-message": true
        }
    }
}
